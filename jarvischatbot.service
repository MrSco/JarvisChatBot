[Unit]
Description=JarvisChatBot
Requires=sys-devices-platform-soc-soc:sound-sound-card2-controlC2.device
After=sys-devices-platform-soc-soc:sound-sound-card2-controlC2.device

[Service]
Type=simple
ExecStart=/home/user/scripts/JarvisChatBot/venv/bin/python3 main.py
WorkingDirectory=/home/user/scripts/JarvisChatBot
Restart=on-failure
RestartSec=1

[Install]
WantedBy=default.target
